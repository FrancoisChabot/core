        "eslint": "^7.24.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "license-checker": "^25.0.1",
        "microbundle": "^0.13.0",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.5",
